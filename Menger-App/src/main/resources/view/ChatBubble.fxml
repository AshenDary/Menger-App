<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox fx:id="bubbleContainer" spacing="8" style="-fx-padding: 6; -fx-background-radius: 20;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.controller.ChatBubbleController">
    <children>
        <ImageView fx:id="profilePic" fitHeight="40" fitWidth="40" pickOnBounds="true" preserveRatio="true" visible="false" />
        <VBox style="-fx-background-radius: 20;">
            <Label fx:id="senderName" style="-fx-font-weight: bold; -fx-font-size: 15px; -fx-border-radius: 20;" visible="false" />
            <Label fx:id="messageLabel" maxWidth="280" style="-fx-padding: 8; -fx-font-size: 15px; -fx-background-radius: 20;" wrapText="true" />
        </VBox>
    </children>
</HBox>
