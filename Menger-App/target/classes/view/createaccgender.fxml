<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="964.0" prefWidth="520.0" style="-fx-background-color: #162029;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.controller.CreateAccGenderController">
   <children>
      <VBox alignment="CENTER" prefHeight="964.0" prefWidth="520.0" spacing="20.0">
         <children>
            <HBox prefHeight="26.0" prefWidth="520.0">
               <children>
                  <ImageView fx:id="backicon" fitHeight="25.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../assets/images/backicon2.png" />
                     </image>
                     <HBox.margin><Insets bottom="15.0" /></HBox.margin>
                  </ImageView>
               </children>
               <padding><Insets left="20.0" right="20.0" /></padding>
            </HBox>

            <VBox prefHeight="100.0" prefWidth="520.0" spacing="2.0">
               <children>
                  <Label text="What's your gender?" textFill="WHITE">
                     <font><Font name="System Bold" size="25.0" /></font>
                  </Label>
                  <Label text="You can change who sees your gender on your profile later." textFill="WHITE" wrapText="true">
                     <font><Font size="20.0" /></font>
                  </Label>
               </children>
               <padding><Insets left="20.0" right="20.0" /></padding>
            </VBox>

            <HBox alignment="CENTER" prefHeight="160.0" prefWidth="520.0" spacing="10.0">
               <children>
                  <VBox alignment="CENTER" prefHeight="160.0" prefWidth="480.0" spacing="10.0" style="-fx-background-radius: 20; -fx-background-color: transparent; -fx-border-color: #697479; -fx-border-radius: 20;">
                     <children>
                        <HBox alignment="CENTER" prefHeight="60.0" prefWidth="480.0">
                           <children>
                              <Label text="Female" textFill="WHITE">
                                 <font><Font size="18.0" /></font>
                              </Label>
                              <Region prefWidth="361.0" />
                              <RadioButton fx:id="femaleradio" mnemonicParsing="false" style="-fx-background-color: transparent;" />
                           </children>
                           <padding><Insets left="20.0" right="20.0" /></padding>
                        </HBox>

                        <Separator prefWidth="480.0" style="-fx-max-height: 0.5;" />

                        <HBox alignment="CENTER" prefHeight="60.0" prefWidth="480.0">
                           <children>
                              <Label text="Male" textFill="WHITE">
                                 <font><Font size="18.0" /></font>
                              </Label>
                              <Region prefHeight="60.0" prefWidth="378.0" />
                              <RadioButton fx:id="maleradio" mnemonicParsing="false" style="-fx-background-color: transparent;" />
                           </children>
                           <padding><Insets left="20.0" right="20.0" /></padding>
                        </HBox>
                     </children>
                  </VBox>
               </children>
               <padding><Insets left="20.0" right="20.0" /></padding>
            </HBox>

            <Button fx:id="nextbutton" onAction="#handleNext" prefHeight="45.0" prefWidth="460.0" style="-fx-background-color: #1877f2; -fx-text-fill: white; -fx-background-radius: 25;" text="Next">
               <font><Font size="17.0" /></font>
               <VBox.margin><Insets left="20.0" right="20.0" /></VBox.margin>
            </Button>

            <Region prefHeight="410.0" prefWidth="520.0" VBox.vgrow="NEVER" />
         </children>
      </VBox>
   </children>
</AnchorPane>
